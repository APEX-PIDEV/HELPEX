{% extends 'admin.html.twig' %}

{% block title %}Organisation index{% endblock %}

{% block body %}

    <div class="org-table-container">
            <div class="org-table-head-container">
                <div class="">
                    <h2>Manage <b>Organisations</b></h2>
                </div>
                <div class="add-org-btn-container">
                    <a href="{{ path('app_organisation_new') }}" class="add-org-btn" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>Add New Organiation</span></a>

                </div>
            </div>
        <table class="org-table">
            <thead class="org-table-head">
            <tr>
                <th class="org-table-th">Id</th>
                <th class="org-table-th">Nom</th>
                <th class="org-table-th">Email</th>
                <th class="org-table-th">Numero Telephone</th>
                <th class="org-table-th">Document</th>
                <th class="org-table-th">Description de sa cause</th>
                <th class="org-table-th">Information de paiement</th>
                <th class="org-table-th">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for organisation in organisations %}
                <tr>
                    <td  class="org-table-td">{{ organisation.id }}</td>
                    <td  class="org-table-td">{{ organisation.NomOrg }}</td>
                    <td  class="org-table-td">{{ organisation.emailOrganisation }}</td>
                    <td  class="org-table-td">{{ organisation.numTelOrganisation }}</td>
                    <td  class="org-table-td"><p class="org-table-status status-pending">{{ organisation.documentOrganisation }}</p></td>
                    <td  class="org-table-td">
                        {{ organisation.descriptionOrganisation|length > 10 ? organisation.descriptionOrganisation|slice(0, 10) ~ '...' : organisation.descriptionOrganisation  }}
                    </td>
                    <td  class="org-table-td">{{ organisation.paymentInfo }}</td>
                    <td  class="org-table-td">
                        <div class="org-icon-container">
                            <a class="org-action-item" href="{{ path('app_organisation_show', {'id': organisation.id}) }}"><i class="fa-solid fa-circle-info" style="color: #0035ba"></i></a>
                            <a class="org-action-item" href="{{ path('app_organisation_edit', {'id': organisation.id}) }}"><i class="fa-solid fa-pencil"style="color: #FFC107"></i></a>
                            <form class="org-action-item" method="post" action="{{ path('app_organisation_delete', {'id': organisation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Organisation?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organisation.id) }}">
                                <button>
                                    <a href="{{ path('app_organisation_delete', {'id': organisation.id}) }}"><i class="fa-solid fa-trash-can" style="color: red"></i></a>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}
